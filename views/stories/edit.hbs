<div class="container">
  <h3>Edit Story</h3>
  <div class="row">
    <form action="/stories/{{story._id}}" method="POST">
      <input type="hidden" name="_method" value="PUT" />
      <div class="row">
        <div class="input-field">
          <input type="text" id="title" name="title" value="{{story.title}}" />
          <label for="title">Title</label>
        </div>
      </div>

      <label for="status">Your Story's Status</label>
      <div class="row">
        <div class="input-field">
          <select id="status" name="status">
            {{#select story.status}}
              <option value="Public" selected>Public</option>
              <option value="Private">Private</option>
            {{/select}}
          </select>
        </div>
      </div>

      <div class="row">
        <div class="input-field">
          <h5>Tell Your Story</h5>
          <textarea id="body" name="body">{{story.body}}</textarea>
        </div>
      </div>

      <div class="row">
        <input type="submit" value="Repost" class="btn" />
        <a href="/dashboard" class="btn orange">Cancel</a>
      </div>
    </form>
  </div>
</div>